@model src.Models.Package

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Package";
}

@await Html.PartialAsync("_Banner")

<div class="content-top">
    <div class="col-md-12">
        <div style="background: #fff">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <br />
                        <form asp-action="edit" asp-controller="Subscriptions">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">

                                <input type="hidden" asp-for="Id" class="form-control" />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Limit_ads" class="control-label"></label>
                                <input asp-for="Limit_ads" class="form-control" />
                                <span asp-validation-for="Limit_ads" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Limit_featured_ads" class="control-label"></label>
                                <input asp-for="Limit_featured_ads" class="form-control" />
                                <span asp-validation-for="Limit_featured_ads" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Is_active" /> @Html.DisplayNameFor(model => model.Is_active)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
