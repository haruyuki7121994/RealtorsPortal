@model src.Models.Admin

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_Banner")
<div class="content-top">
    <div class="col-md-12">
        <div style="background: #fff">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <br />
                        <form onsubmit="return validate()" asp-action="ChangePassword" asp-controller="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id" type="hidden" readonly class="form-control" />
                            <input asp-for="Email" type="hidden" readonly class="form-control" />
                            <div class="form-group">
                                <label asp-for="Password" class="control-label">New Password</label>
                                <input asp-for="Password" type="password" value="" id="password1" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Re-Password</label>
                                <input type="password" id="repassword-id" value="" class="form-control" />
                                <span id="error-repassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Change" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#repassword-id").keyup(validate);
        });
        function validate() {
            var password1 = $("#password1").val();
            var password2 = $("#repassword-id").val();

            if (password1 === "" || password2 === "") {
                $("#error-repassword").text("The Re-Password field is invalid");
                return false;
            }

            if (password1 == password2) {
                $("#error-repassword").text("");
                return true;
            }
            else {
                $("#error-repassword").text("The Re-Password field is invalid");
                return false;
            }
        }
    </script>
}
