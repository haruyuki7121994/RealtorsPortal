@model src.Models.Configuration

@{
    ViewData["Title"] = "Configuration";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_Banner")

<div class="content-top">
    <div class="col-md-12">
        <div style="background: #fff">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <br />
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-row">
                                <div class="form-group col-md-5">
                                    <label asp-for="Obj" class="control-label"></label>
                                    <input type="text" class="form-control" readonly asp-for="Obj" />
                                </div>
                                <div class="form-group col-md-5">
                                    <label asp-for="Val" class="control-label"></label>
                                    @if (Model.Obj == "Expiration of ads" || Model.Obj == "Number of ads per page" || Model.Obj == "Subscription price")
                                    {
                                        <input asp-for="Val" type="number" value="@Int32.Parse(Model.Val)" class="form-control" />
                                    }
                                    else if(Model.Obj == "Payment Subscription" || Model.Obj == "Trigger featured ads")
                                    {
                                        <select class="form-control" asp-for="Val">
                                            <option value="disabled">Disabled</option>
                                            <option value="enabled">Enabled</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <input asp-for="Val" type="text" class="form-control" />
                                    }
                                    <span asp-validation-for="Val" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>



                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
