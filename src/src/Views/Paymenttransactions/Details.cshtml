@model src.Models.PaymentPackage

@{
    ViewData["Title"] = "Details";
}

<h2>Details History</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @if (Model.Status == PaymentPackage.APPROVED_STATUS)
            {
                <span>Approved</span>
            }
            @if (Model.Status == PaymentPackage.EXPIRED_STATUS)
            {
                <span>Expired</span>
            }
            @if (Model.Status == PaymentPackage.PENDING_STATUS)
            {
                <span>Pending</span>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Transaction_id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Transaction_id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Payment_price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Payment_price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Used_ads)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Used_ads)/@Html.DisplayFor(model => model.Limit_ads)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Used_featured_ads)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Used_featured_ads)/@Html.DisplayFor(model => model.Limit_featured_ads)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Created_at)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Created_at)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Updated_at)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Updated_at)
        </dd>
        <dt>
            Customer
        </dt>
        <dd>
            @Model.Customer.Email
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PackageName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PackageName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
