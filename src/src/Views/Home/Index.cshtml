@model dynamic
@{
    Layout = "~/Views/Shared/_RealtorsPortalLayout.cshtml";
    ViewData["Title"] = "Home Page";
}

<!-- Start slider  -->
<section id="aa-slider">
    <div class="aa-slider-area">
        <!-- Top slider -->
        <div class="aa-top-slider">
            @if (Model.featuredProps.Count > 0)
            {
                foreach (var item in Model.featuredProps)
                {
                    <!-- Top slider single slide -->
                    <div class="aa-top-slider-single">
                        @if (item.Thumbnail_url != null)
                        {
                            <img width="1920" height="1080" style="object-fit: cover" src="~/@item.Thumbnail_url" alt="img">
                        }
                        else
                        {
                            <img src="~/img/property-header-bg.jpg" alt="img">
                        }
                        <!-- Top slider content -->
                        <div class="aa-top-slider-content">
                            <span class="aa-top-slider-catg">@item.Title</span>
                            <p class="aa-top-slider-location"><i class="fa fa-map-marker"></i>@item.Country.Name, @item.Region.Name, @item.City.Name, @item.Area.Name</p>
                            <p class="aa-top-slider-price">$@item.Price</p>
                            @Html.ActionLink("View Details", "Property", "Home", new { id = item.Id }, new { @class = "aa-secondary-btn" })
                        </div>
                        <!-- / Top slider content -->
                    </div>
                    <!-- / Top slider single slide -->
                }
            }
            else
            {
                <!-- Top slider single slide -->
                <div class="aa-top-slider-single">
                    <img src="~/img/slider/3.jpg" alt="img">
                    <!-- Top slider content -->
                    <div class="aa-top-slider-content">
                        <span class="aa-top-slider-catg">Duplex</span>
                        <h2 class="aa-top-slider-title">1560 Square Feet</h2>
                        <p class="aa-top-slider-location"><i class="fa fa-map-marker"></i>South Beach, Miami (USA)</p>
                        <span class="aa-top-slider-off">30% OFF</span>
                        <p class="aa-top-slider-price">$460,000</p>
                        <a href="#" class="aa-top-slider-btn">Read More <span class="fa fa-angle-double-right"></span></a>
                    </div>
                    <!-- / Top slider content -->
                </div>
                <!-- / Top slider single slide -->
            }
        </div>
    </div>
</section>
<!-- End slider  -->
<!-- Advance Search -->
<section id="aa-advance-search">
    <div class="container">
        <div class="aa-advance-search-area">
            <div class="form">
                <div class="aa-advance-search-top">
                    <form asp-action="Properties" asp-controller="Home" method="get">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="aa-single-advance-search">
                                    <select name="category_id" asp-items="Model.categories">
                                        <option value="0" selected>Category</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="aa-single-advance-search">
                                    <select name="method">
                                        <option value="" selected>Type</option>
                                        <option value="sell">Sell</option>
                                        <option value="buy">Buy</option>
                                        <option value="rent">Rent</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="aa-single-advance-search">
                                    <select name="customer_role">
                                        <option value="" selected>Agent/Private Seller</option>
                                        <option value="agent">Agent</option>
                                        <option value="private">Private Seller</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="aa-single-advance-search">
                                    <input class="aa-search-btn" type="submit" value="Search">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Advance Search -->
<!-- About us -->
