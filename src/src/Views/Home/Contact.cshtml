@{
    Layout = "~/Views/Shared/_RealtorsPortalLayout.cshtml";
    ViewData["Title"] = "Contact Page";
}
<!-- Start Proerty header  -->
@model src.Models.Notification

<section id="aa-property-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-property-header-inner">
                    <h2>Contact</h2>
                    <ol class="breadcrumb">
                        <li><a href="#">HOME</a></li>
                        <li class="active">Contact</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Proerty header  -->

<section id="aa-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-contact-area">
                    <div class="aa-contact-top">
                        <div class="aa-contact-top-left">
                            <iframe width="100%" height="450" frameborder="0" allowfullscreen="" style="border:0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.088974721854!2d106.7890194152604!3d10.804497261628308!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175275b3cefabcb%3A0xf3335eb4224ca86e!2sChung%20c%C6%B0%20Sky%209!5e0!3m2!1sen!2s!4v1629538505872!5m2!1sen!2s"></iframe>
                        </div>
                        <div class="aa-contact-top-right">
                            <h2>Contact</h2>
                            <p>If you have any question or need further support, please feel free to contact us though email, phone or address below. Or simply leave us a message, our team will contact you as soon as we can.</p>
                            <ul class="contact-info-list">
                                <li> <i class="fa fa-phone"></i> 1-700-564-6321</li>
                                <li> <i class="fa fa-envelope-o"></i> info@homeproperty.com</li>
                                <li> <i class="fa fa-map-marker"></i> Sky 9 Resident, District 9, Ho Chi Minh city, Viet Nam</li>
                            </ul>
                        </div>
                    </div>
                    <div class="aa-contact-bottom">
                        <div class="aa-title">
                            <h2>Send Your Message</h2>
                            <span></span>
                            <p>Your email address will not be published. Required fields are marked <strong class="required">*</strong></p>
                        </div>
                        <div class="aa-contact-form">
                            <form asp-action="Contact" class="contactform">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <p class="comment-form-author">
                                    <label for="author">Name <span class="required">*</span></label>
                                    <input type="text" name="author" value="" size="30">
                                </p>
                                <p class="comment-form-author">
                                    <label asp-for="ToEmail" class="control-label">Email</label>
                                    <input asp-for="ToEmail" class="form-control" />
                                    <span asp-validation-for="ToEmail" class="text-danger"></span>
                                </p>
                                <p class="comment-form-url">
                                    <label for="subject">Subject</label>
                                    <input type="text" name="subject">
                                </p>
                                <p class="comment-form-author">
                                    <label asp-for="Description" class="control-label">Message</label>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </p>
                                <p class="form-submit">
                                    <input type="submit" value="Send Message" class="aa-browse-btn" />
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>