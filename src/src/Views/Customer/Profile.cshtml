@{
    Layout = "~/Views/Shared/_RealtorsPortalLayout.cshtml";
    ViewData["Title"] = "Profile Page";
}
}
<!-- Start Proerty header  -->
<section id="aa-property-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-property-header-inner">
                    <h2>Profile</h2>
                    <ol class="breadcrumb">
                        <li><a href="#">HOME</a></li>
                        <li class="active">Customer</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Proerty header  -->
<div class="clearfix"></div>
<div style="margin-top: 20px">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 wrapper-custom">
                <br />
                <form asp-action="Create" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Name/ Company</label>
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Contact</label>
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Username</label>
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Password</label>
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Avatar</label>
                        <input name="file" type="file" class="form-control" />
                        <span class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="radio">
                            <label><input type="radio" name="optradio" checked>Private Seller</label>
                        </div>
                        <div class="radio">
                            <label><input type="radio" name="optradio">Agent</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="button" value="Back" class="btn btn-danger" />
                        <input type="submit" value="Update Profile" class="btn btn-dark" />
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
    <br />
</div>
