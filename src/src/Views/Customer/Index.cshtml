@model dynamic
@{
    Layout = "~/Views/Shared/_RealtorsPortalLayout.cshtml";
    ViewData["Title"] = "Customer Page";
}
}
<!-- Start Proerty header  -->
<section id="aa-property-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-property-header-inner">
                    <h2>Customer</h2>
                    <ol class="breadcrumb">
                        <li><a href="#">HOME</a></li>
                        <li class="active">Customer</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Proerty header  -->
<div class="clearfix"></div>
<div style="margin-top: 20px">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <a style="text-decoration: none" asp-controller="Customer" asp-action="Profile">
                    <button type="button" class="btn btn-danger btn-block btn-lg">
                        <span class="fa fa-google-plus-square"></span>Profile
                    </button>
                </a>
            </div>
            <div class="col-md-4">
                <a style="text-decoration: none" asp-controller="Customer" asp-action="Create">
                    <button type="button" class="btn btn-danger btn-block btn-lg">
                        <span class="fa fa-google-plus-square"></span>Create Ads
                    </button>
                </a>
            </div>
            <div class="col-md-4">
                <a style="text-decoration: none" asp-controller="Customer" asp-action="Package">
                    <button type="button" class="btn btn-danger btn-block btn-lg">
                        <span class="fa fa-google-plus-square"></span>Package
                    </button>
                </a>
            </div>
        </div>
        <div class="row">
            <h1>List Properties</h1>
        </div>
        <div class="row">
            <div class="col-md-12 wrapper-custom" style="margin: 0px">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Property Name
                            </th>
                            <th>
                                Start Date
                            </th>
                            <th>
                                End Date
                            </th>
                            <th>
                                Is Featured
                            </th>
                            <th>
                                Is Active
                            </th>
                            <th>
                                Actions
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Properties)
                        {
                            <tr>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Created_at
                                </td>
                                <td>
                                    @item.Ended_at
                                </td>
                                <td>
                                    @item.Is_featured
                                </td>
                                <td>
                                    @item.Is_active
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Customer" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-controller="Customer" onclick="return confirm('Do you really want delete the property ?')" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <h1>List Packages</h1>
        </div>
        <div class="row">
            <div class="col-md-12 wrapper-custom" style="margin: 0px">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Package Name
                            </th>
                            <th>
                                Used
                            </th>
                            <th>
                                Featured Used
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PaymentPackages)
                        {
                            <tr>
                                <td>
                                    @item.PackageName
                                </td>
                                <td>
                                    @item.Used_ads/@item.Limit_ads
                                </td>
                                <td>
                                    @item.Used_featured_ads/@item.Limit_featured_ads
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />
</div>
