@model IEnumerable<src.Models.Package>

@{
    ViewData["Title"] = "Index";
}

<h2>Subscriptions</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Limit_ads)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Limit_featured_ads)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Is_active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Limit_ads)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Limit_featured_ads)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_active)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
