@model src.Models.Package

@{
    ViewData["Title"] = "edit";
}

<h2>Edit Subscriptions</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
              
                <input type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Limit_ads" class="control-label"></label>
                <input asp-for="Limit_ads" class="form-control" />
                <span asp-validation-for="Limit_ads" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Limit_featured_ads" class="control-label"></label>
                <input asp-for="Limit_featured_ads" class="form-control" />
                <span asp-validation-for="Limit_featured_ads" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Is_active" /> @Html.DisplayNameFor(model => model.Is_active)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
